#!/bin/bash

export GREEN='\033[0;32m'
export RED='\033[0;31m'
export NC='\033[0m' # No Color

echo "`date` Rebuilding i18n bundles"
test -z `which msgfmt 2>/dev/null` && { echo -e "`date` ${RED}No msgfmt installed. Skiped${NC}"; exit 1; }

recompile_cmd() {
    source=$1
    target=`echo $source | sed -e 's/\.po$/\.mo/'`
#    test -f "$target" && action="write" || action="create"
    msgfmt $source -o $target
    echo -e "      ${GREEN}write $target${NC}"
}

export -f recompile_cmd

echo "`date` Cleanup..."
find web/i18n -type f -name *.mo -exec rm -f {} \;

echo "`date` Building..."
find web/i18n -type f -name *.po -exec bash -c 'recompile_cmd "$0"' {} \; && {
    echo "`date` Done"
}
